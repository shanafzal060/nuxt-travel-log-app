    "tailwindcss": "^4.1.12",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.1.0",
    "@iconify-json/tabler": "^1.2.22",
    "daisyui": "^5.0.50",
    "drizzle-kit": "^0.31.4",
